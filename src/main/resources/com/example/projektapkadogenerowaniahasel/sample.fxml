<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.projektapkadogenerowaniahasel.Controller" alignment="CENTER">
    <Label text="Długość hasła:" />
    <TextField fx:id="lengthTextField" prefWidth="150" />
    <TextField fx:id="passwordTextField" prefWidth="200" editable="false" />
    <Button text="Generuj hasło" onAction="#generatePassword" styleClass="generate-button" />
    <Button text="Zapamiętaj hasło" onAction="#savePassword" styleClass="save-button" />
    <Button text="Przywróć hasło" onAction="#restorePassword" styleClass="restore-button" />
    <Button text="Zakończ" onAction="#exitApplication" styleClass="exit-button" />
</VBox>
